@model List<MovimientosStock>
@{
    ViewData["Title"] = "Gestión de Movimientos";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-exchange-alt me-2"></i>Movimientos de Stock
                </h1>
                <div class="btn-group">
                    <a asp-action="Entrada" class="btn btn-success">
                        <i class="fas fa-arrow-down me-2"></i>Nueva Entrada
                    </a>
                    <a asp-action="Salida" class="btn btn-danger">
                        <i class="fas fa-arrow-up me-2"></i>Nueva Salida
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Tipo de Movimiento</label>
                    <select name="tipo" class="form-select">
                        <option value="">Todos</option>
                        <option value="ENTRADA">Entradas</option>
                        <option value="SALIDA">Salidas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Desde</label>
                    <input type="date" name="fechaInicio" class="form-control">
                </div>
                <div class="col-md-3">
                    <label class="form-label">Fecha Hasta</label>
                    <input type="date" name="fechaFin" class="form-control">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter me-2"></i>Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Tarjeta de tabla -->
    <div class="card">
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Producto</th>
                            <th>Almacén</th>
                            <th>Tipo</th>
                            <th>Cantidad</th>
                            <th>Observaciones</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movimiento in Model)
                        {
                            <tr>
                                <td>@movimiento.id_movimiento</td>
                                <td>@movimiento.fecha_movimiento?.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>
                                    @if (movimiento.Producto != null)
                                    {
                                        <span>@movimiento.Producto.nombre_producto</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Producto no encontrado</span>
                                    }
                                </td>
                                <td>
                                    @if (movimiento.Almacen != null)
                                    {
                                        <span>@movimiento.Almacen.nombre_almacen</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Almacén no encontrado</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(movimiento.tipo_movimiento == "ENTRADA" ? "bg-success" : "bg-danger")">
                                        @movimiento.tipo_movimiento
                                    </span>
                                </td>
                                <td>@movimiento.cantidad</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(movimiento.observacion))
                                    {
                                        <span class="text-truncate" style="max-width: 150px; display: inline-block;" 
                                              title="@movimiento.observacion">
                                            @movimiento.observacion
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin observaciones</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@movimiento.id_movimiento" class="btn btn-sm btn-info" title="Ver">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" title="Eliminar" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@movimiento.id_movimiento">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>

                                    <!-- Modal de confirmación para eliminar -->
                                    <div class="modal fade" id="deleteModal-@movimiento.id_movimiento" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirmar Eliminación</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    ¿Estás seguro de que deseas eliminar este movimiento del día @movimiento.fecha_movimiento?.ToString("dd/MM/yyyy")?
                                                    <div class="alert alert-warning mt-2">
                                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                                        Esta acción afectará el inventario y no se puede deshacer.
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                    <form asp-action="Delete" method="post">
                                                        <input type="hidden" name="id_movimiento" value="@movimiento.id_movimiento" />
                                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        border-top: none;
    }

    .table td {
        vertical-align: middle;
    }

    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }

    .card-header {
        background-color: rgba(0, 0, 0, 0.03);
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>