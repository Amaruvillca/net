@model List<Productos>
@{
    ViewData["Title"] = "Gestión de Productos";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-boxes me-2"></i>Productos
                </h1>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus-circle me-2"></i>Nuevo Producto
                </a>
            </div>
          
        </div>
    </div>

    <!-- Tarjeta de tabla -->
    <div class="card">
        
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Imagen</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Precio</th>
                            <th>Unidades</th>
                            <th>Registro</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var producto in Model)
                        {
                            <tr>
                                <td>@producto.id_producto</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(producto.imagen))
                                    {
                                        <img src="~/img/@producto.imagen" alt="Imagen de @producto.nombre_producto" 
                                             class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="no-image" style="width: 60px; height: 60px; background: #f5f5f5; display: flex; align-items: center; justify-content: center;">
                                            <i class="fas fa-box-open text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>@producto.nombre_producto</td>
                                @if (producto.Categoria == null)
                                {
                                    <td><span class="text-muted">Sin categoría</span></td>
                                }
                                else
                                {
                                    <td>@producto.Categoria.nombre_categoria</td>
                                }
                                
                                <td>@producto.precio_unitario Bs.</td>
                                <td>
                                    <span class="badge @(producto.stock > 10 ? "bg-success" : "bg-warning text-dark")">
                                        @producto.stock
                                    </span>
                                </td>
                                <td>@producto.fecha_registro</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@producto.id_producto" class="btn btn-sm btn-info" title="Ver">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@producto.id_producto" class="btn btn-sm btn-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" title="Eliminar" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@producto.id_producto">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>

                                    <!-- Modal de confirmación para eliminar -->
                                    <div class="modal fade" id="deleteModal-@producto.id_producto" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirmar Eliminación</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    ¿Estás seguro de que deseas eliminar el producto "@producto.nombre_producto"?
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                                    <form asp-action="Delete" method="post">
                                                        <input type="hidden" name="id_producto" value="@producto.id_producto" />
                                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

           
        </div>
    </div>
</div>

<style>
    .table th {
        font-weight: 600;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.5px;
        border-top: none;
    }

    .table td {
        vertical-align: middle;
    }

    .no-image {
        border-radius: 4px;
        border: 1px solid #dee2e6;
    }

    .btn-group .btn {
        padding: 0.25rem 0.5rem;
    }

    .card-header {
        background-color: rgba(0, 0, 0, 0.03);
        border-bottom: 1px solid rgba(0, 0, 0, 0.125);
    }
</style>