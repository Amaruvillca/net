@model CrudProductos.Models.Productos
@{
    ViewData["Title"] = "Nuevo Producto";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-box-open me-2"></i>Nuevo Producto
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Productos</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nuevo</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Información del Producto
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
<input type="hidden" name="id_producto" value="@Model.id_producto">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="nombre_producto" class="form-label">
                                    <i class="fas fa-tag me-2"></i>Nombre del Producto
                                </label>
                                <input asp-for="nombre_producto" class="form-control" placeholder="Ej. Laptop HP EliteBook">
                                <span asp-validation-for="nombre_producto" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="id_categoria" class="form-label">
                                    <i class="fas fa-tags me-2"></i>Categoría
                                </label>
                                <select asp-for="id_categoria" class="form-select" 
                                        asp-items="ViewBag.Categorias">
                                    <option value="">-- Seleccione una categoría --</option>
                                </select>
                                <span asp-validation-for="id_categoria" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="precio_unitario" class="form-label">
                                    <i class="fas fa-dollar-sign me-2"></i>Precio Unitario
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">Bs.</span>
                                    <input asp-for="precio_unitario" class="form-control" placeholder="0.00">
                                </div>
                                <span asp-validation-for="precio_unitario" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                
                                <input type="hidden" asp-for="stock" class="form-control" placeholder="0" value="@Model.stock">
                                
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="descripcion" class="form-label">
                                <i class="fas fa-align-left me-2"></i>Descripción
                            </label>
                            <textarea asp-for="descripcion" class="form-control" rows="3" 
                                      placeholder="Descripción detallada del producto..."></textarea>
                            <span asp-validation-for="descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="imagen" class="form-label">
                                <i class="fas fa-image me-2"></i>Imagen del Producto
                            </label>
                            <input type="file" asp-for="imagen" class="form-control" accept="image/*">
                            <small class="text-muted">Formatos aceptados: JPG, PNG, GIF. Tamaño máximo: 2MB</small>
                            <span asp-validation-for="imagen" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="reset" class="btn btn-secondary me-md-2">
                                <i class="fas fa-eraser me-2"></i>Limpiar
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Guardar Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
   
    
    <style>
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background-color: rgba(0, 0, 0, 0.03);
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            padding: 1.25rem 1.5rem;
        }
        
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        
        .breadcrumb {
            background-color: transparent;
            padding: 0.5rem 0;
        }
        
        .input-group-text {
            background-color: #f8f9fa;
        }
    </style>
}