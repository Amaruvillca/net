@{
    ViewData["Title"] = "Inicio - Panel de Control";
}

<div class="container-fluid">
    <!-- Header con estadísticas rápidas -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-tachometer-alt me-2"></i>Panel de Control
                </h1>
                <div class="d-flex">
                    <span class="badge bg-primary me-2 d-flex align-items-center">
                        <i class="fas fa-calendar-day me-2"></i> @DateTime.Now.ToString("dd MMMM yyyy")
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Tarjetas de resumen -->
    <div class="row mb-4">
        <div class="col-md-3 mb-4">
            <div class="card card-statistic bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Productos</h6>
                            <h2 class="mb-0">1,245</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-box-open fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Productos")" class="text-white">Ver todos <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card card-statistic bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Categorías</h6>
                            <h2 class="mb-0">24</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-tags fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Categorias")" class="text-white">Ver todas <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card card-statistic bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Stock Bajo</h6>
                            <h2 class="mb-0">18</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("StockBajo", "Productos")" class="text-dark">Revisar <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card card-statistic bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Movimientos Hoy</h6>
                            <h2 class="mb-0">56</h2>
                        </div>
                        <div class="stat-icon">
                            <i class="fas fa-exchange-alt fa-2x"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href="@Url.Action("Index", "Movimientos")" class="text-white">Ver todos <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos y contenido principal -->
    <div class="row">
        <!-- Gráfico de productos por categoría -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-chart-pie me-2"></i>Productos por Categoría</h5>
                </div>
                <div class="card-body">
                    <div class="chart-container" style="height: 300px;">
                        <!-- Aquí iría tu gráfico (usando Chart.js u otra librería) -->
                        <div class="text-center py-5">
                            <img src="https://via.placeholder.com/500x300?text=Gráfico+de+Productos+por+Categoría" 
                                 alt="Gráfico de productos por categoría" 
                                 class="img-fluid rounded">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Últimos movimientos -->
        <div class="col-lg-6 mb-4">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title"><i class="fas fa-list me-2"></i>Últimos Movimientos</h5>
                    <a href="@Url.Action("Index", "Movimientos")" class="btn btn-sm btn-outline-primary">Ver todos</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Producto</th>
                                    <th>Tipo</th>
                                    <th>Cantidad</th>
                                    <th>Fecha</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Laptop HP EliteBook</td>
                                    <td><span class="badge bg-success">Entrada</span></td>
                                    <td>15</td>
                                    <td>@DateTime.Now.AddHours(-2).ToString("g")</td>
                                </tr>
                                <tr>
                                    <td>Mouse Inalámbrico</td>
                                    <td><span class="badge bg-danger">Salida</span></td>
                                    <td>8</td>
                                    <td>@DateTime.Now.AddHours(-5).ToString("g")</td>
                                </tr>
                                <tr>
                                    <td>Teclado Mecánico</td>
                                    <td><span class="badge bg-success">Entrada</span></td>
                                    <td>12</td>
                                    <td>@DateTime.Now.AddDays(-1).ToString("g")</td>
                                </tr>
                                <tr>
                                    <td>Monitor 24"</td>
                                    <td><span class="badge bg-danger">Salida</span></td>
                                    <td>3</td>
                                    <td>@DateTime.Now.AddDays(-1).ToString("g")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones rápidas -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><i class="fas fa-bolt me-2"></i>Acciones Rápidas</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-3">
                        <a href="@Url.Action("Create", "Productos")" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-2"></i>Nuevo Producto
                        </a>
                        <a href="@Url.Action("Create", "Categorias")" class="btn btn-success">
                            <i class="fas fa-tag me-2"></i>Nueva Categoría
                        </a>
                        <a href="@Url.Action("Entradas", "Movimientos")" class="btn btn-info">
                            <i class="fas fa-arrow-down me-2"></i>Registrar Entrada
                        </a>
                        <a href="@Url.Action("Salidas", "Movimientos")" class="btn btn-warning">
                            <i class="fas fa-arrow-up me-2"></i>Registrar Salida
                        </a>
                        <a href="@Url.Action("Index", "Reportes")" class="btn btn-secondary">
                            <i class="fas fa-file-pdf me-2"></i>Generar Reporte
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card-statistic {
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-statistic:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    }

    .stat-icon {
        opacity: 0.3;
        font-size: 2.5rem;
        position: absolute;
        right: 20px;
        top: 20px;
    }

    .page-title {
        font-weight: 600;
        color: #2c3e50;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(59, 130, 246, 0.05);
    }
</style>