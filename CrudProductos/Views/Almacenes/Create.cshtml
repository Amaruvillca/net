@model CrudProductos.Models.Almacenes
@{
    ViewData["Title"] = "Nuevo Almacén";
}

<div class="container-fluid">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header d-flex justify-content-between align-items-center">
                <h1 class="page-title">
                    <i class="fas fa-warehouse me-2"></i>Nuevo Almacén
                </h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Listado
                </a>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Inicio</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Almacenes</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Nuevo</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row">
        <div class="col-lg-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Información del Almacén
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="nombre_almacen" class="form-label">
                                <i class="fas fa-signature me-2"></i>Nombre del Almacén
                            </label>
                            <input asp-for="nombre_almacen" class="form-control" placeholder="Ej. Almacén Central, Bodega Norte...">
                            <span asp-validation-for="nombre_almacen" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ubicacion" class="form-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Ubicación
                            </label>
                            <textarea asp-for="ubicacion" class="form-control" rows="3" 
                                      placeholder="Dirección exacta del almacén..."></textarea>
                            <span asp-validation-for="ubicacion" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="reset" class="btn btn-secondary me-md-2">
                                <i class="fas fa-eraser me-2"></i>Limpiar
                            </button>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Registrar Almacén
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    
    
    <style>
        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background-color: rgba(0, 0, 0, 0.03);
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            padding: 1.25rem 1.5rem;
        }
        
        .form-label {
            font-weight: 500;
            color: #495057;
        }
        
        .breadcrumb {
            background-color: transparent;
            padding: 0.5rem 0;
        }
    </style>
}